{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "importHelpers": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "paths": {
      "@domonda/form/*": ["form/src/*"],
      "@domonda/plumb/*": ["plumb/src/*"],
      "@domonda/query-params/*": ["query-params/src/*"],
      "@domonda/react-form/*": ["react-form/src/*"],
      "@domonda/react-plumb/*": ["react-plumb/src/*"],
      "@domonda/ui/*": ["ui/src/*"],
      "@domonda/*": ["*/src/"]
    }
  },
  "exclude": ["node_modules", "packages/**/node_modules", "packages/**/lib"]
}

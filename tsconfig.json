{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "declaration": true,
    "baseUrl": "./packages",
    "paths": {
      "@domonda/ui": ["domonda-ui/src"],
      "@domonda/ui/*": ["domonda-ui/src/*"],
      "@domonda/form": ["domonda-form/src"],
      "@domonda/form/*": ["domonda-form/src/*"],
      "@domonda/react-form": ["domonda-react-form/src"],
      "@domonda/react-form/*": ["domonda-react-form/src/*"]
    }
  },
  "exclude": ["node_modules"]
}

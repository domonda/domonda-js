{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}

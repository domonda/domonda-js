{
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12",
    "yarn": ">=1.22.4"
  },
  "scripts": {
    "clean": "lerna exec 'rm -rf lib node_modules *.tsbuildinfo'",
    "lint": "eslint 'packages/**/{src,__tests__}/**/*.{ts,tsx}'",
    "test": "jest",
    "type-check": "lerna run type-check --parallel",
    "build": "lerna run build --parallel",
    "version": "lerna version --allow-branch master --conventional-commits",
    "publish": "lerna publish from-git --contents lib"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.9",
    "@types/node": "^13.13.15",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8",
    "fs-extra": "^9.0.1",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "lodash": "^4.17.19",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  }
}

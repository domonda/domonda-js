{
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12",
    "yarn": ">=2"
  },
  "scripts": {
    "clean": "yarn workspaces foreach -v -p run clean",
    "lint": "eslint 'packages/**/{src,__tests__}/**/*.{js,jsx,ts,tsx}'",
    "test": "jest",
    "build": "yarn workspaces foreach -v -p run build",
    "prepare": "yarn clean; yarn build",
    "bumpver": "lerna version --conventional-commits"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "fs-extra": "^9.0.0",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.0",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3"
  }
}
